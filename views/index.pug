extends layout

block content
  div(align='center', style='padding-top:80px; padding-bottom:20px')
    img(src='/website_images/name-logo-tails.png')
  div(align='center')
    .container
      .row
        .col.col-lg
          .rosegold
            div
              h3
                font(face='Arial', size='5 rem') FEATURED
          div
            ul.list-group
              li.list-group-item
                img.img-thumbnail(src='/website_images/heavy-breathing-emoji.jpg')
              li.list-group-item
                img.img-thumbnail(src='/website_images/peppa-pig.jpg')
              li.list-group-item
                img.img-thumbnail(src='/website_images/kermit-hearts.jpg')
              li.list-group-item
                img.img-thumbnail(src='/website_images/old-town-road.jpg')
        .col.col-lg-7
          .hot
            div
              h3
                font(face='Arial', size='5 rem') HOT THIS MONTH
          #carouselExampleControls.carousel.slide(style='padding:20px', data-ride='carousel', data-pause='hover')
            .carousel-inner
              .carousel-item.active(style='width: 650px; height: 300px; overflow: hidden')
                img.d-block.w-100(height='300', src='/website_images/test1.jpg', alt='First slide')
              .carousel-item(style='width: 650px; height: 300px; overflow: hidden')
                img.d-block.w-100(height='300', src='/website_images/test2.jpg', alt='Second slide')
              .carousel-item(style='width: 650px; height: 300px; overflow: hidden')
                img.d-block.w-100(height='300', src='/website_images/test3.jpg', alt='Third slide')
              .carousel-item(style='width: 650px; height: 300px; overflow: hidden')
                img.d-block.w-100(height='300', src='/website_images/test4.jpg', alt='Fourth slide')
        .col.col-lg
          .gold
            h3
              font(face='Arial', size='5 rem') HALL OF FAME
          div
            ul.list-group
              li.list-group-item
                img.img-thumbnail(src='/website_images/fiveorsixstores.jpg')
              li.list-group-item
                img.img-thumbnail(src='/website_images/roadworkahead.png')
              li.list-group-item
                img.img-thumbnail(src='/website_images/thurston-cat.png')
              li.list-group-item
                img.img-thumbnail(src='/website_images/he-needs-some-milk.jpg')
                div(align='center', style='padding-top:100px')
          
